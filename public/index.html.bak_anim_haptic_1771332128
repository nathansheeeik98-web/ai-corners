<script id="badge-controller">
  (function(){
    // Badge simples: acende quando tiver "confianca >= alertaMin" em alguma an√°lise ou snapshot.
    // Se voc√™ j√° salva alertas em outro lugar, depois eu conecto.
    function getAlertMin(){
      const v = Number(localStorage.getItem("alertMin") || "80");
      return Number.isFinite(v) ? v : 80;
    }

    function setBadge(id, on, text){
      const el = document.getElementById(id);
      if(!el) return;
      el.textContent = text || "!";
      el.classList.toggle("on", !!on);
    }

    // Heur√≠stica: se no #out existir JSON com confianca >= alertMin, acende
    function scan(){
      const alertMin = getAlertMin();
      let hot = false;

      const out = document.getElementById("out");
      if(out){
        try{
          const j = JSON.parse(out.textContent || "{}");
          const c = Number(j.confianca);
          if(Number.isFinite(c) && c >= alertMin) hot = true;
        }catch(e){}
      }

      setBadge("badge-live", hot, hot ? "!" : "!");
      // se quiser distribuir por tab depois, eu separo por origem
    }

    setInterval(scan, 1200);
    scan();
  })();
</script>

