<body>
  <h1>IA Escanteios — Live (econômico)</h1>
  <div class="hint">
    ✅ Lista jogos ao vivo | ✅ Escolhe 1–3 fixtures | ✅ Atualiza em modo econômico (10 min) e quando você clicar | ✅ Alerta quando “ENTRAR” e confiança ≥ 75.
  </div>

  <div class="card">
    <div class="row">
      <div><button class="btn2" id="loadLive">Carregar jogos ao vivo</button></div>
      <div>
        <label>Filtro (time/liga/país)</label>
        <input id="filter" placeholder="Ex: Brasil / Arsenal / Premier" />
      </div>
      <div>
        <label>Alerta mínimo (confiança)</label>
        <select id="alertMin">
          <option value="70">70</option>
          <option value="75" selected>75</option>
          <option value="80">80</option>
          <option value="85">85</option>
        </select>
      </div>
      <div><button class="btn2" id="force">Forçar atualização agora</button></div>
    </div>

    <div class="hint">
      Clique em “Carregar jogos ao vivo”, escolha o jogo, depois “Monitorar”.  
      No plano grátis: recomendo **1 jogo**.
    </div>

    <div class="list" id="liveList"></div>
  </div>

  <div class="card">
    <div class="row">
      <div>
        <label>Fixture #1</label>
        <input id="fx1" placeholder="preenchido ao clicar na lista" />
      </div>
      <div>
        <label>Fixture #2</label>
        <input id="fx2" placeholder="opcional" />
      </div>
      <div>
        <label>Fixture #3</label>
        <input id="fx3" placeholder="opcional" />
      </div>
      <div>
        <label>Monitorar</label>
        <button class="btn" id="setFx">Salvar & Monitorar</button>
      </div>
    </div>

    <div id="meta" style="margin-top:10px"></div>
    <pre id="snap">Sem dados ainda.</pre>
  </div>

  <div class="card">
    <div class="row">
      <div><button class="btn" id="an1">Analisar Jogo 1</button></div>
      <div><button class="btn" id="an2">Analisar Jogo 2</button></div>
      <div><button class="btn" id="an3">Analisar Jogo 3</button></div>
    </div>
    <pre id="out">Clique em “Analisar”.</pre>
  </div>

<script>
  const $ = (id) => document.getElementById(id);

  let latest = [];       // snapshots (data)
  let lastAlertAt = 0;   // cooldown alerts
  const ALERT_COOLDOWN_MS = 120000; // 2 min

  function pills(list) {
    const meta = $("meta");
    meta.innerHTML = "";
    list.forEach(t => {
      const s = document.createElement("span");
      s.className = "pill";
      s.textContent = t;
      meta.appendChild(s);
    });
  }

  function beep() {
    try {
      const ctx = new (window.AudioContext || window.webkitAudioContext)();
      const o = ctx.createOscillator();
      const g = ctx.createGain();
      o.connect(g); g.connect(ctx.destination);
      o.frequency.value = 880;
      g.gain.value = 0.05;
      o.start();
      setTimeout(() => { o.stop(); ctx.close(); }, 180);
      if (navigator.vibrate) navigator.vibrate([120, 80, 120]);
    } catch {}
  }

  async function loadLive() {
    $("liveList").innerHTML = "Carregando...";
    const r = await fetch("/api/live/list");
    const j = await r.json();
    if (!j.ok) {
      $("liveList").innerHTML = "Erro ao carregar jogos ao vivo: " + (j.error || "");
      return;
    }
    renderLiveList(j.items || []);
  }

  function renderLiveList(items) {
    const filter = ($("filter").value || "").toLowerCase().trim();
    const box = $("liveList");
    box.innerHTML = "";

    const filtered = items.filter(x => {
      if (!filter) return true;
      const blob = `${x.country} ${x.league} ${x.home} ${x.away}`.toLowerCase();
      return blob.includes(filter);
    }).slice(0, 80);

    if (!filtered.length) {
      box.innerHTML = "<div class='item'>Nada encontrado. Tente outro filtro.</div>";
      return;
    }

    for (const it of filtered) {
      const div = document.createElement("div");
      div.className = "item";
      div.innerHTML = `
        <div><b>${it.home}</b> vs <b>${it.away}</b> <span class="mono">(${it.score})</span></div>
        <div class="hint">${it.country} • ${it.league} • min ${it.minute} • fixture ${it.fixture_id}</div>
        <div class="row" style="margin-top:8px">
          <button class="btn2" data-id="${it.fixture_id}">Colocar no #1</button>
        </div>
      `;
      div.querySelector("button").onclick = () => {
        $("fx1").value = it.fixture_id;
      };
      box.appendChild(div);
    }
  }

  $("filter").addEventListener("input", () => {
    // recarrega lista “em memória” seria melhor; por simplicidade, só filtra após carregar.
    // então aqui só tenta filtrar o que já está renderizado via loadLive de novo.
  });

  async function setFixtures() {
    const ids = [$("fx1").value, $("fx2").value, $("fx3").value]
      .map(x => (x||"").trim()).filter(Boolean).slice(0,3);

    const r = await fetch("/api/live/set-fixtures", {
      method: "POST",
      headers: { "Content-Type":"application/json" },
      body: JSON.stringify({ fixture_ids: ids })
    });
    const j = await r.json();
    pills([`Monitorando: ${(j.fixture_ids||[]).join(", ") || "—"}`, `Auto: ${j.refresh_seconds}s`, `Modo econômico: ON`]);
    await refreshSnapshots();
  }

  async function refreshSnapshots() {
    const r = await fetch("/api/live/snapshots");
    const j = await r.json();
    const items = j.items || [];

    latest = items.map(x => x?.data).filter(Boolean);
    $("snap").textContent = JSON.stringify(j, null, 2);

    pills([`Fixtures: ${(j.fixture_ids||[]).join(", ") || "—"}`, `Auto: ${j.refresh_seconds}s`, `UI: 15s`, `Atualizado: ${new Date().toLocaleTimeString()}`]);
  }

  async function forceRefresh() {
    await fetch("/api/live/force-refresh", { method: "POST" });
    await refreshSnapshots();
  }

  async function analyzeIndex(i) {
    const data = latest[i];
    if (!data) { $("out").textContent = "Sem snapshot. Clique em atualizar."; return; }

    $("out").textContent = "Analisando...";
    const r = await fetch("/api/analyze", {
      method: "POST",
      headers: { "Content-Type":"application/json" },
      body: JSON.stringify({
        minute: data.minute,
        score: data.score,
        corners_home: data.corners_home,
        corners_away: data.corners_away,
        corners_total: data.corners_total,
        shots_total: data.shots_total,
        shots_on_target: data.shots_on_target,
        pressure_side: data.pressure_side,
        red_cards: data.red_cards,
        notes: `Fonte: API-Football | ${data.match} | fixture ${data.fixture_id}`
      })
    });
    const j = await r.json();
    const result = j.result || j.heuristic || j;
    $("out").textContent = JSON.stringify(result, null, 2);

    // ALERTA (ENTRAR + confianca >= X)
    const min = Number($("alertMin").value || 75);
    const conf = Number(result.confianca || 0);
    const should = (result.acao === "ENTRAR" && conf >= min);

    const now = Date.now();
    if (should && (now - lastAlertAt) > ALERT_COOLDOWN_MS) {
      lastAlertAt = now;
      beep();
      alert(`ALERTA: ENTRAR (conf ${conf}) • Linha: ${result.linha_sugerida}`);
    }
  }

  $("loadLive").onclick = loadLive;
  $("setFx").onclick = setFixtures;
  $("force").onclick = forceRefresh;

  $("an1").onclick = () => analyzeIndex(0);
  $("an2").onclick = () => analyzeIndex(1);
  $("an3").onclick = () => analyzeIndex(2);

  // UI puxa o cache do seu servidor a cada 15s (não gasta requisições da API-Football)
  setInterval(refreshSnapshots, 15000);
</script>
</body>
</html>
